{
    "swagger": "2.0",
    "info": {
        "description": "Simple file storage service",
        "title": "file-storage service",
        "contact": {
            "name": "Aleksey Timchenko",
            "url": "https://flegdev.ru",
            "email": "aleksey.timchenqo@gmail.com"
        },
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/files/{id}": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Get file information by ID",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "File ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/router.FilesGetOneResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/server.ErrorResponse"
                        }
                    }
                }
            },
            "delete": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "files"
                ],
                "summary": "Remove file by ID",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "File ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    }
                }
            }
        },
        "/health": {
            "get": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Health route",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/router.CheckResponse"
                        }
                    }
                }
            }
        },
        "/ready": {
            "get": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Ready route",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/router.CheckResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "router.CheckResponse": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "example": "OK"
                },
                "time": {
                    "type": "integer",
                    "example": 1708353333135
                }
            }
        },
        "router.FilesGetOneResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "format": "uuid",
                    "example": "a6da224f-a0b6-4803-82a7-268fb98cd8d4"
                },
                "mime": {
                    "type": "string",
                    "maxLength": 255,
                    "example": "image/jpeg"
                },
                "name": {
                    "type": "string",
                    "maxLength": 255,
                    "example": "image.jpg"
                },
                "size": {
                    "type": "integer",
                    "minimum": 0,
                    "example": 36354
                },
                "uploadedAt": {
                    "type": "integer",
                    "minimum": 0,
                    "example": 1708339471468
                }
            }
        },
        "server.ErrorResponse": {
            "type": "object",
            "properties": {
                "detail": {
                    "type": "string",
                    "example": "Something went wrong"
                },
                "status": {
                    "type": "integer",
                    "example": 500
                },
                "title": {
                    "type": "string",
                    "example": "InternalServerError"
                }
            }
        }
    }
}